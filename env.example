# Core
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Security (MINIMUM 32 characters for secrets!)
HMAC_SECRET=replace_me_with_at_least_32_chars
JWT_SECRET=replace_me_with_at_least_32_chars
RATE_LIMIT_PER_MINUTE=100
INTERNAL_ALLOWLIST=127.0.0.1/32
BLOCKED_IPS_CSV=

# CORS (comma-separated list of allowed origins, leave empty to allow all)
CORS_ALLOWED_ORIGINS=

# Database
MONGO_URI=mongodb://localhost:27017/n8n_backend

# Queue / Redis
REDIS_URL=redis://localhost:6379

# n8n (MINIMUM 32 characters for token!)
N8N_INGEST_URL=http://localhost:5678/webhook/ingest
N8N_TOKEN=replace_me_with_at_least_32_chars

# Messaging providers
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_MESSAGING_SERVICE_SID=

SENDGRID_API_KEY=
EMAIL_FROM=no-reply@example.com
ALERT_EMAIL_TO=ops@example.com

SLACK_BOT_TOKEN=
SLACK_ALERT_CHANNEL=

# Features
OTP_SEND_ON_GENERATE=false
ENABLE_WORKERS=false
# Queue concurrency (min: 1, max: 50)
QUEUE_CONCURRENCY=5
TEMPLATE_DIR=templates

# Idempotency
IDEMPOTENCY_TTL_SEC=86400
ENABLE_IDEMPOTENCY_MW=false

# Signature
SIGNATURE_TOLERANCE_SEC=60
ENABLE_REFUNDS=false
REFUND_LIMIT_CENTS=5000

# PM2 Configuration
PM2_INSTANCES=2


